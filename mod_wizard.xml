    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                    name="tipo"
                    type="list"
                    disable="separator"
                    label="Visuale"
                    description="Varia la vista ottuenuta"
                    default="logo">
                    <option value="barranav">Barra di navigazione</option>
                    <option value="glossario">Pulsante glossario</option>
                    <!--<option value="attestati">Attestati Conseguiti</option>-->
                    <!--<option value="corsiabilitati">I miei corsi</option>-->

                </field>

                <field
                        name="glossario"
                        type="textarea"
                        disable="separator"
                        label="URL glossario"
                        description="URL glossario"
                        default="<b>HHCP:</b> Home Health Care Providers "/>
            </fieldset>


        </fields>
    </config>
    
</extension>
